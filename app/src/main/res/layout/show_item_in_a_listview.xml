<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blue"
        android:text=" 12/11/2017"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/txtStstus"
        />
    <TextView
        android:id="@+id/txtTitel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Electrick Bil "
        android:layout_below="@+id/txtStstus"
        android:layout_toRightOf="@+id/BtnVisible"
        android:layout_toEndOf="@+id/BtnVisible"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/txtTitel"
        android:id="@+id/txtDescription"
        android:text="pay ina online "
        android:textSize="15dp"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/BtnLike"
        android:layout_width="60dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/complete"
        android:background="@color/wheat"
        android:layout_below="@+id/txtStstus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/txtdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12/11/2017"
        android:gravity="center"
        android:layout_below="@+id/BtnLike"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>